/ {
    combos {
        compatible = "zmk,combos";

        combo_us {
            timeout-ms = <50>;
            key-positions = <14 15>;
            bindings = <&kp LANG2>;
            layers = <0 3>;
        };

        combo_kana {
            timeout-ms = <50>;
            key-positions = <20 21>;
            bindings = <&kp LANG1>;
            layers = <0 3>;
        };

        combo_util {
            timeout-ms = <50>;
            key-positions = <36 37>;
            bindings = <&mo 6>;
            layers = <3 0>;
        };

        back_to_0 {
            bindings = <&to 0>;
            key-positions = <47 11>;
            layers = <3>;
            timeout-ms = <50>;
        };

        math {
            bindings = <&word_math>;
            key-positions = <21 19>;
            timeout-ms = <50>;
            layers = <0>;
        };

        PC_tenkey {
            bindings = <&tog 1>;
            key-positions = <9 8 7>;
            timeout-ms = <50>;
            layers = <0>;
        };

        iPad_tenkey {
            bindings = <&tog 4>;
            key-positions = <9 8 7>;
            timeout-ms = <50>;
            layers = <3>;
        };
    };

    macros {
        word_math: word_math {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp INT_MUHENKAN &kp LA(LS(MINUS)) &kp SPACE &kp SPACE &kp LEFT_ARROW>;
            label = "WORD_MATH";
        };

        bt_01_iPad: bt_01_iPad {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&bt BT_SEL 1 &to 3>;
            label = "BT_01_IPAD";
        };

        bt_00_PC: bt_00_PC {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&bt BT_SEL 0 &to 0>;
            label = "BT_00_PC";
        };
    };

    keymap {
